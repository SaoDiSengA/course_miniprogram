/* pages/register/register.wxss */

.register_container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 800px;
}

.register_head_image {
    width: 100%;
}

.register_area {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 60px;
    margin-left: 10px;
    background-color: #ffffff;
    width: 95%;
    height: 540px;
    border-bottom: 2px solid #cccccc;
    border-radius: 10px;
}

.head_image_area {
    margin-top: 10px;
}

.default_head_image {
    height: 90px;
    width: 90px;
}

.school_info {
    display: flex;
    flex-direction: row;
    width: 90%;
    height: 35px;
    margin-top: 10px;
    /* margin-bottom: 10px; */
    border-bottom: 2px solid #cccccc;
}

.grade_info {
    display: flex;
    flex-direction: row;
    width: 90%;
    height: 35px;
    margin-top: 5px;
    margin-bottom: 5px;
    /* margin-bottom: 10px; */
    border-bottom: 2px solid #cccccc;
}

.user_info {
    display: flex;
    flex-direction: row;
    width: 90%;
    height: 25px;
    margin-top: 10px;
    margin-bottom: 10px;
    border-bottom: 2px solid #cccccc;
}

.input_info {
    font-size: medium;
    color: #999999;
}

.check_number_input_info {
    font-size: medium;
    color: #999999;
    width: 150px;
}

/* 学校提示信息样式 */
.school_prompt_info {
    margin-top: 13px;
}

/* 年级提示信息样式 */
.grade_prompt_info {
    margin-top: 13px;
}

/* 提示信息样式 */
.prompt_info {
    font-size: medium;
    margin-right: 20px;
}

/* 发送验证码样式框 */
.send_check_number {
    height: 22px;
    color: #6786ff;
    margin-left: 30px;
    margin-top: -3px;
    border: 2px solid  #6786ff;
    border-radius: 5px;
}

/* 用户协议样式 */
.user_aggrement {
    display: flex;
    flex-direction: row;
    position: relative;
    margin-top: 370px;
    margin-left: 70px;
}

/* 注册按钮样式 */
.submit_info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 80%;
    background: rgba(103, 134, 255, 0.9);
    height:50px;
    border-radius: 50px;
    margin-top: 30px;
    margin-left: 40px;
}

/* 扩展区域样式 */
.extra_choose {
    margin-top: 20px;
    margin-left: 120px;
}


/* 下拉选择框样式 */
.select_box {
    background: #fff;
    line-height: 90rpx;
    margin-left: 20px;
    text-align: left;
    position: relative;
}
  
.select {
    width: 100%;
    display: flex;
    align-items: center;
}
  
.select_text {
    font-size: 28rpx;
    flex: 1;
    color: rgb(102, 102, 102);
    line-height: 86rpx;
    height: 86rpx;
}
  
.select_img {
    width: 40rpx;
    height: 40rpx;
    display: block;
    transition: transform 0.3s;
}
  
.select_img_rotate {
    transform: rotate(180deg);
}
  
.option_box {
    position: absolute;
    top: 86rpx;
    width: 100%;
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
    z-index: 100;
}
  
.option {
    display: block;
    line-height: 40rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
    color: rgb(102, 102, 102);
}

