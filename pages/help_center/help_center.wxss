/* pages/help_center/help_center.wxss */

/* 页面整体 */
.container {
    padding: 0px;
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: left;
}

/* 标题 */
.title {
    width: 90%;
    height: 20px;
    margin-top: 10px;
}

/* 问题详情 */
.quesition_list {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
    border: 1px solid #cccccc;
    border-radius: 10px;
}

/* 单个问题 */
.one_quesition {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-top: 5px;
    margin-bottom: 5px;
}

/* 问题内容 */
.quesition_info {
    display: flex;
    flex-direction: row;
    justify-content: left;
    margin-top: 2px;
    margin-left: -160px;
    margin-bottom: 2px;
}

/* 分割线 */
.divide_line {
    width: 90%;
    border: 1px solid #cccccc;
}

