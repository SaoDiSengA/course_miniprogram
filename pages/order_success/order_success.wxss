/* pages/order_success/order_success.wxss */

.container {
    padding: 0px;
}

.show_order {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.show_success {
    margin-top: 20px;
}

.show_success_icon {
    width: 100px;
    height: 100px;
}

.show_order_info_01 {
    margin-top: 10px;
    margin-bottom: 5px;
}

.show_order_info_02 {
    margin-top: 5px;
    margin-bottom: 10px;
}

.divide_line {
    width: 100%;
    border: 1px solid #eeeeee;
}

.check_button {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 80%;
    background: linear-gradient(to right, #6786ff, #7a6fff);
    height:50px;
    border-radius: 50px;
    margin-top: 30px;
}
