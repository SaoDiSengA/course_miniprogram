}

/* 作业详情页面背景图片 */
.homework_content_background_picture {
    width: 80%;
    height: 350px;
}


/* 下部渐变色 */
.bottom_part {
    position: absolute;
    z-index: 2;
    width: 200px;
    height: 200px;
    border-radius: 500px;
    margin-top: 350px;
    margin-left: -200px;
    background: linear-gradient(to bottom right, #a7b5ff, #c8b1ff); 
}


