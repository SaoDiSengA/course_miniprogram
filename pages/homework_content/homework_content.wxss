/* 作业详情页面 */

.container {
    padding: 0px;
    width: 100%;
}

/* 上部渐变色 */
.top_part {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 500px;
    background: -webkit-linear-gradient(top , #7086ff, #f5f2ff);
}

/* 作业详情内容 */
.homework_content {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 4;
    margin-top: -450px;
    margin-bottom: 40px;
    margin-left: 40rpx;
    width: 72%;
    /* height: 350px; */
    background-color: #ffffff;
    border-radius: 10px;
}

/* 作业图标盒子 */
.homework_icon {
    margin-left: -450rpx;
    margin-bottom: 5px;
}

/* 作业图标 */
.homework_icon_picture {
    width: 30px;
    height: 30px;
}

/* 作业布置的时间和老师 */
.homework_info {
    display: flex;
    flex-direction: column;
    margin-top: 10px;
}

/* 作业内容 */
.homework_context {
    margin-top: 15px;
    width: 90%;
}

/* 作业详情页面背景 */
