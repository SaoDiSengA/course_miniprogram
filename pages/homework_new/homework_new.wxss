.tui-picker-content{
  margin: 15rpx;
  display: flex;
  border: 1rpx solid rgb(207, 206, 206);
}
.arrow image{ 
  width: 20rpx;
  height: 30rpx;
  margin-left: 320rpx;

}
.tui-picker-detail{
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content{
  border: 1rpx solid rgb(207, 206, 206);
  margin: 15rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
}
.content_txt{
  margin: 15rpx;
  padding: 0 10rpx;
  border: 1rpx solid rgb(207, 206, 206);
}
.content_txt textarea{
  display: flex;
}









